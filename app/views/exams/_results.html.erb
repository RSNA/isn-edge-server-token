<% som_table_for exams, :id => "exams_for_patient", :style => "width: 100%" do |st| %>
  <% st.column("") {|e| button_to_function("Add to Cart", "add_to_cart('add_link_#{e.id}', #{e.id});", :id => "add_link_#{e.id}") } %>
  <% st.column("Accession #") {|e| e.accession_number } %>
  <% st.column("Exam Desc") {|e| e.exam_description } %>
  <% st.column("Exam Date") {|e| e.modified_date.to_s(:long) } %>
  <% st.column("Status") {|e| status_for(e) } %>
  <% st.column("Send Status") {|e| send_status_for(e) } %>
<% end %>

<%= javascript_tag("new SortableTable('exams_for_patient')") %>
