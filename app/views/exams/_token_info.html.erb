<h1>Cart Queued for Sending</h1>

<div class="demographic">
  <label>Patient Name:</label>
  <span><%= @patient.patient_name %></span>
</div>

<div class="demographic">
  <label>Access Code:</label>
  <span><%= format_token(@job_set.send_components[:access_code]) %></span>
</div>

<div class="demographic">
  <label>Date of Birth:</label>
  <span><%= @patient.dob %></span>
</div>

<% if @job_set.logic_type == :site_to_site %>
<div>
  Send printout to a destination site in the Image Share Network to enable them to retrieve exam.
</div>
<% end %>
<%= link_to("Print", {:controller => :exams, :action => :index, logic_type: @job_set.logic_type, :patient_id => @patient.id}.merge(@job_set.send_components), class: "btn btn-primary") %>

