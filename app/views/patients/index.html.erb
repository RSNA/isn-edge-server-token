<% content_for(:title, "Search for Patients") %>
<% form_for :search, :html => {:style => "margin-bottom: 30px;", :onsubmit => "search_by('/patients/search', Form.serialize(this)); return false;"} do |f| %>
  <input name="search" class="search" type="text" size="30" />
  <%= submit_tag "Search" %>
<% end %>
<%= image_tag "/images/ajax-loader.gif", :style => "display: none;", :id => "search_spinner" %>
<%= content_tag :div, "", :id => "search_results", :style => "margin-bottom: 20px; display: none;" %>
