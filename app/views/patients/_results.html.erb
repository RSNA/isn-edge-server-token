<% som_table_for patients, :style => "width: 100%" do |st| %>
  <% st.column("") {|p| link_to("Select", {:controller => :patients, :action => :create_rsna_id, :patient_id => p.id}, :method => :post, :confirm => "Are you sure this is the correct patient? Have you received consent?") } %>
  <% st.column("Name") {|p| p.patient_name } %>
  <% st.column("MRN") {|p| p.mrn } %>
  <% st.column("Sex") {|p| p.sex } %>
  <% st.column("Date of Birth") {|p| p.dob.to_s(:long) } %>
<% end %>
