<% som_table_for patients, :sortable => true, :class => "tablesorter", :style => "width: 100%", :id => "patient_results" do |st| %>
  <% st.column("") {|p| button_to_function("Select", "obtain_consent(#{p.id},$.parseJSON('#{p.attributes.to_json}'))") } %>
  <% st.column("Name") {|p| p.patient_name } %>
  <% st.column("MRN") {|p| p.mrn } %>
  <% st.column("Sex") {|p| p.sex } %>
  <% st.column("Date of Birth") {|p| p.dob.to_s(:long) } %>
<% end %>
