<% content_for(:title, "Roles") %>
<% som_table_for @users do |st| %>
  <% st.column("Name", &:user_name) %>
  <% st.column("Login", &:user_login) %>
  <% st.column("Role") {|user| role_button(user, "User", 0) + role_button(user, "Super User", 1) + role_button(user, "Admin", 2) + content_tag(:span, "", :id => "update_alert_#{user.id}") } %>
<% end %>
