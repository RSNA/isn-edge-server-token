<% content_for(:title, "Create a new user") %>
<% @new_user.password = @new_user.password_confirmation = nil %>


<%= form_for :new_user, :url => users_path do |f| -%>

<%= error_messages_for :new_user %>

  <div class="form-group">
    <%= label_tag 'login' %>
    <%= f.text_field :user_login, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag 'name' %>
    <%= f.text_field :user_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag 'email' %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag 'password' %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag 'password_confirmation', 'Confirm Password' %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="btn-group" data-toggle="buttons">

    <label class="btn btn-primary active">
      <%= radio_button_tag("new_user[role_id]", 0, true) %> User
    </label>

    <label class="btn btn-primary">
      <%= radio_button_tag("new_user[role_id]", 1, false) %> Super User
    </label>

    <label class="btn btn-primary">
      <%= radio_button_tag("new_user[role_id]", 2, false) %> Administrator
    </label>

  </div>

  <div class="form-group margin-top"><%= submit_tag 'Add User', class: "btn btn-primary" %></div>

<% end %>
