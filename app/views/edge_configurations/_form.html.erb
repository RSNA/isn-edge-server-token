<%= form_for(:edge_configuration, html: {id: "new_edge_configuration_form", class: "form", method: 'post'}, url: form_action) do |f| %>
  <%= error_messages_for :edge_configuration %>

  <div class="form-group">
    <label class="inline">Key</label>
    <%= f.text_field(:given_key, class: "form-control") %>
  </div>

  <div class="form-group">
    <label class="inline">Value</label>
    <%= f.text_field(:value, class: "form-control") %>
  </div>

  <%= submit_tag(submit_text, class: "btn btn-primary") %>

<% end %>
