<%= content_for(:title, "PDF Template") %>

<a href="<%= url_for action: 'help' %>" class="btn btn-primary" role="button">Help</a>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="form-group">
      <%= form_for :upload, url: {action: :upload}, html: {multipart: true}  do |f| %>
      <%= file_field_tag "pdffile", class: "text-primary", accept: "application/pdf" %>
      <%= submit_tag "Upload", :class => "btn btn-primary" %>
      <a class="btn btn-primary" href="<%= url_for action: 'preview' %>" role="button">Preview</a>
      <% end %>
    </div>
  </div>
</div>
